{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": [
        "./src/common/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@infrastructure/*": [
        "./src/infrastructure/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@server/*": [
        "./src/server/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "out",
    ".next"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ]
}
